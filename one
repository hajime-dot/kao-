    // --- Logic ---
    let currentDayIndex = 0;

    function init() {
        renderDateTabs();
        renderCards(0);
    }

    function renderDateTabs() {
        const container = document.getElementById('date-tabs');
        container.innerHTML = '';
        itinerary.forEach((day, index) => {
            const chip = document.createElement('div');
            chip.className = `date-chip ${index === 0 ? 'active' : ''}`;
            chip.innerText = day.date.split(' ')[0]; // åªé¡¯ç¤ºæ—¥æœŸ
            chip.onclick = () => {
                document.querySelectorAll('.date-chip').forEach(c => c.classList.remove('active'));
                chip.classList.add('active');
                renderCards(index);
            };
            container.appendChild(chip);
        });
    }

    function renderCards(dayIndex) {
        const dayData = itinerary[dayIndex];
        const container = document.getElementById('cards-container');
        
        // Update Weather Header
        document.getElementById('weather-desc').innerText = dayData.weather;
        document.getElementById('header-subtitle').innerText = `Day ${dayIndex + 1} â€¢ ${dayData.date}`;

        container.innerHTML = '';
        container.style.opacity = 0;

        dayData.events.forEach(event => {
            const card = document.createElement('div');
            card.className = `card type-${event.type}`;
            
            // Tags HTML
            let tagsHtml = '';
            if (event.tags) {
                event.tags.forEach(tag => {
                    let tagClass = 'tag-tips';
                    if(tag === 'BOOKING') tagClass = 'tag-booking';
                    if(tag === 'MUST EAT') tagClass = 'tag-must';
                    tagsHtml += `<span class="tag ${tagClass}">${tag}</span>`;
                });
            }

            // Google Maps Link
            const mapLink = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(event.loc + " é«˜é›„")}`;

            card.innerHTML = `
                <span class="card-time">${event.time}</span>
                <div class="card-title">${event.title}</div>
                <div class="card-desc">${event.desc}</div>
                ${tagsHtml ? `<div style="margin-bottom:10px;">${tagsHtml}</div>` : ''}
                <a href="${mapLink}" target="_blank" class="btn-nav">ğŸ“ å°èˆªå‰å¾€</a>
            `;
            container.appendChild(card);
        });

        // Fade in animation
        setTimeout(() => {
            container.style.transition = 'opacity 0.3s';
            container.style.opacity = 1;
        }, 50);
    }

    function switchTab(sectionId, navElement) {
        // Hide all sections
        document.querySelectorAll('.section').forEach(el => el.classList.remove('active'));
        // Show target section
        document.getElementById(sectionId).classList.add('active');
        
        // Update Nav UI
        document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
        navElement.classList.add('active');
    }

    // Initialize
    init();

</script>

